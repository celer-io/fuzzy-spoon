div.container.is-hidden-tablet
  nav.nav
    div.nav-center
      a.nav-item
        img(src='http://bulma.io/images/bulma-logo.png')
    span.nav-toggle
      span
      span
      span
    div.nav-right.nav-menu
      each cat in site.categories.toArray()
        span.nav-item= cat.name
        each post in cat.posts.toArray()
          a.nav-item(href= config.root + post.canonical_path) #{ post.title }
